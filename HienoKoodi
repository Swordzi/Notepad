public class Mover : MonoBehaviour
{
    float xValue = 0;
    float zValue = 0;
    float yValue = 0;
    int direction = 3;
    // Start is called before the first frame update
    void Start()
    {
        switch (direction)
        {
            case (1):
                xValue = 0.01f;
                break;
            case (2):
                zValue = 0.01f;
                break;
            case (3):
                yValue = 0.01f;   
                break;
        }
    }

    // Update is called once per frame
    void Update()
    {
        transform.Translate(xValue, yValue,zValue);
    }
}

